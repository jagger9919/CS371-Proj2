@model Advertisement_WebApp.Models.Advertisements
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims

@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create">
    <!-- Title -->
    <div class="form-group">
        <label asp-for="AdvTitle">Title</label><br />
        <input asp-for="AdvTitle" type="text" />
    </div>
    <hr />
    <!-- Details -->
    <div class="form-group">
        <label asp-for="AdvDetails">Details</label><br />
        <textarea asp-for="AdvTitle"></textarea>
    </div>
    <hr />
    <!-- Price -->
    <div class="form-group">
        <label asp-for="AdvTitle">Title</label><br />
        <input asp-for="AdvTitle" type="number" value="0.00" min="0.01" max="10000.00" step="0.01" />
    </div>
    <hr />
    <!-- Category -->
    <div class="form-group">
        <label asp-for="Category_ID">Category</label><br />
        <select id="Category_ID" name="Category_ID">
            <option value="CAT">Cars and Trucks</option>
            <option value="HOU">Housing</option>
            <option value="ELC">Electronics</option>
            <option value="CCA">Child Care</option>
        </select>
    </div>
    <hr />
    <button type="submit" value="Create">Add Advertisement</button> | <a asp-action="Index">Return to Advertisements</a>
</form>